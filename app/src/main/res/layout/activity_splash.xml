<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Activity.Splash">

    <ImageView
        android:id="@+id/imgAppLogoSplash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/applogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/txtAppNameSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NoteWave"
        android:textColor="@color/red"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAppLogoSplash" />

    <TextView
        android:id="@+id/txtAppSloganSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life is too fast don't forget anything \n just note it !"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAppNameSplash" />

    <TextView
        android:id="@+id/txtDevelopBySplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By \n Anish Rawat"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarSplash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAppSloganSplash"
        app:layout_constraintBottom_toTopOf="@+id/txtDevelopBySplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458" />

</androidx.constraintlayout.widget.ConstraintLayout>